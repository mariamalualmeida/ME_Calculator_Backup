modules = ["nodejs-20", "python-3.11", "java", "java-17"]

[nix]
channel = "stable-24_05"
packages = ["openjdk17", "gradle", "android-tools"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Chat Server"

[[workflows.workflow]]
name = "Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m http.server 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Chat Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server/index.js"
waitForPort = 3001

[deployment]
run = ["sh", "-c", "python -m http.server 5000"]

[[ports]]
localPort = 5000
externalPort = 80
